@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "title",
                    },
                    {
                        data: "releaseDate",
                        render: function (data) {
                            if (data != null) {
                                var dateCast = new Date(data);
                                return dateCast.toLocaleDateString();
                            }
                            else
                                return "";
                        }
                    },
                    {
                        data: "dateAdded",
                        render: function (data) {
                            if (data != null) {
                                var dateCast = new Date(data);
                                return dateCast.toLocaleDateString();
                            }
                            else
                                return "";
                        }
                    },
                    {
                        data: "inStock"
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (data, type, movie) {
                            return "<a href='/movies/edit/" + movie.id + "'>Edit</a> | " +
                                "<a href='/movies/details/" + movie.id + "'>Details</a> | " +
                                "<button class='btn btn-link js-delete' data-movie-id='" + movie.id + "'>Delete</button>";
                        }
                    }
                ]
            });

            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            },
                            error: function () {
                                bootbox.alert("Error occured.");
                            }
                        });
                    }
                });
            });
        });
    </script>
}